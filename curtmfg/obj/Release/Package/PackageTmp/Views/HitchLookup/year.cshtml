@using curtmfg.Models;
@{
    ViewBag.Title = "Hitch Lookup - Select a Make";
    ViewBag.css = new List<string> { Url.Content("~/Content/css/hitchLookup.css") };
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
    string mount = ViewBag.mount;
    string year = ViewBag.year;
    List<string> makes = ViewBag.makes;
}

<h4 id="vehicle" class="hasvehicle"><span><span class="yourvehicle">Your Vehicle:</span> @year</span></h4>
<h3>Select Your Vehicle's Make</h3>
<ul class="lookup">
    @foreach (string make in makes) {
        <li><a href="/HitchLookup/Mount/@mount/Year/@year/Make/@make.Replace('/', '|')">@make</a></li>
    }
</ul>