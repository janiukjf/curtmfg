@using curtmfg.Models
@{
    SimpleMenu mainmenu = ViewBag.mainmenu;
    int counter = 0;
}
<span class="clear"></span>
<nav id="nav_container">
	<ul>
        @if (mainmenu != null && mainmenu.menuID != 0) {
            List<menuItem> contents = mainmenu.contents;
            foreach (menuItem item in contents) {
                counter++;
                if (item.hasContent()) {
                    <li @((counter == contents.Count()) ? "class=last" : "") style="width: @(100 / contents.Count)% ;"><a style="width: 100% ; text-align: center;" href="/page/@item.content.slug">@item.content.page_title</a></li>
                } else {
                    <li @((counter == contents.Count()) ? "class=last" : "") style="width: @(100 / contents.Count)% ;"><a style="width: 100% ; text-align: center;" href="@item.menuLink">@item.menuTitle</a></li>
                }
            }
        }
		<li class="clear"></li>
	</ul>
</nav>