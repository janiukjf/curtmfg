@{
    curtmfg.NewsItem item = ViewBag.item;
    ViewBag.Title = "News - " + item.title;
    ViewBag.layoutclass = "content";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
}

<article class="news">
    <h2>@item.title</h2>
    <p class="byline">@String.Format("{0: MMMM d, yyyy} at {0: h:mm tt}",item.publishStart)</p>
    <div class="content">@Html.Raw(item.content)</div>
    <a href="/News" class="back">&lt; Back to News</a>
</article>