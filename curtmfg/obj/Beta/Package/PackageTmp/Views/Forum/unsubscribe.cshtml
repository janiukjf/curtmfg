@using curtmfg.Models;
@{
    ViewBag.Title = "Forum - Unsubscribe to Notifications";
    ViewBag.css = new List<string> { Url.Content("~/Content/css/forum.css") };
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
    bool unsubscribed = ViewBag.unsubscribed;
    Thread t = ViewBag.thread;
}

@if (unsubscribed) {
    <h3>Unsubscribe Successful!</h3>
    <p style="padding: 0 20px; font-size: 1.2em;">You are no longer subscribed to the "@t.firstPost.title" discussion.</p>
} else {
    <h3>We're Sorry! There was a Problem.</h3>
    <p style="padding: 0 20px; font-size: 1.2em;">We were unable to remove your email address from the notifications for the "@t.firstPost.title" discussion. Please <a href="/Contact">contact us</a> for more assistance.</p>
    <p style="padding: 0 20px; font-size: 1.2em;">Sorry for the inconvenience.</p>
}

<p style="padding: 0 20px; font-size: 1.2em;"><a href="/Forum">< Back to the Forum</a></p>
