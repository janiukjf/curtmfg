@{
	ViewBag.Title = "Forgot Password";
    ViewBag.css = new List<string> { Url.Content("~/Content/css/dealer.css") };
    ViewBag.layoutclass = "content";
    Layout = "~/Views/Shared/_InternalLayout.cshtml";
    string error = ViewBag.error ?? "";
    bool success = ViewBag.success ?? false;
}

<h3 style="margin-left: 0;">Forgot Password</h3>
<p>Please enter your Customer ID below to recover your lost password.</p>
@if (error.Length > 0) {
    <p class="error">@error</p>
}

@if (success) {
    <p>Check your email. Your password has been emailed to the email address we have on file.</p>
} else {
    <form action="/Dealer/ForgotPassword" method="post">
        <input type="text" name="customerID" id="customerID" placeholder="Enter your Customer ID..." value="@(Request.Form["customerID"] ?? "")" />
        <input type="submit" value="Submit" />
    </form>
}